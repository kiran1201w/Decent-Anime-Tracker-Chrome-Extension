{
    "manifest_version": 3,
    "name": "Anime Tracker",
    "version": "1.0",
    "description": "Track your favorite anime and get notified when new episodes are released.",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://graphql.anilist.co/",
        "https://s4.anilist.co/*"
    ],
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}